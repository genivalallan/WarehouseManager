@model Client
@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<h2>Editar Cliente</h2>

@if (Model == null)
{
<h4 class="alert alert-danger">Registro n√£o encontrado.</h4>
}
else
{
<form method="post" action="Edit">
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <label class="bg-dark text-white input-group-text" asp-for="Name"></label>
    </div>
    <input type="text" class="form-control" asp-for="Name">
  </div>

  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <label class="bg-dark text-white input-group-text" asp-for="Address"></label>
    </div>
    <input type="text" class="form-control" asp-for="Address">
  </div>

  <button type="submit" asp-route-id="@Model.ID" class="btn btn-success">Salvar</button>
  <a asp-action="" class="btn btn-info">Voltar</a>
</form>
}
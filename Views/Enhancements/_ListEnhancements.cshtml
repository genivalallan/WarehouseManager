@using System.Text.Json
@model ListViewModel
@{
    int counter = (Model.PagingInfo.Page - 1) * Model.PagingInfo.ItemsPerPage + 1;
    IEnumerable<Enhancement> enhancements = JsonSerializer.Deserialize<IEnumerable<Enhancement>>(Model.JsonItems);
}
    <tr>
        <th>#</th>
        <th>Produto Base</th>
        <th>Produto Final</th>
        @* <th>Veículo</th>
        <th>Motorista</th>
        <th>Peso Bruto</th>
        <th>Tara</th> *@
        <th>Peso Líquido</th>
        <th>Criado Em</th>
        @* <th>Observação</th> *@
        <th>Opções</th>
    </tr>
@foreach (var e in enhancements)
{
    <tr>
        <td>@(counter++)</td>
        <td>@($"{e.BaseStockID} - {e.BaseStock.Product.Name} - {e.BaseStock.Owner.Name}")</td>
        <td>@($"{e.FinalStockID} - {e.FinalStock.Product.Name} - {e.FinalStock.Owner.Name}")</td>
        @* <td>@e.Vehicle.Plate1</td>
        <td>@e.Driver.Name</td>
        <td>@e.GrossWeight</td>
        <td>@e.Vehicle.Tare</td> *@
        <td>@e.NetWeight</td>
        <td>@e.CreatedAt</td>
        @* <td>@e.Comment</td> *@
        <td>
            <a asp-action="Details" asp-route-id="@e.ID" class="btn btn-info">Detalhes</a>
            <a asp-action="Delete" asp-route-id="@e.ID" class="btn btn-danger">Remover</a>
        </td>
    </tr>
}
@model PagingListViewModel<Client>
@{
    ViewData["Title"] = "Lista de Clientes";
    int counter = (Model.PagingInfo.Page - 1) * Model.PagingInfo.ItemsPerPage;
}

    <h2>Lista de Clientes</h2>
@if (Model.PagingInfo.TotalItems == 0)
{
    <p>Nenhum item encontrado.</p>
}
else
{
    <table>
        <tr>
            <th>#</th>
            <th>Nome</th>
            <th>Endere√ßo</th>
        </tr>
@foreach (var c in Model.Items)
{
        <tr>
            <td>@(++counter)</td>
            <td>@c.Name</td>
            <td>@c.Address</td>
        </tr>
}
    </table>
    <div page-model="@Model.PagingInfo" page-action="Clients"></div>
}
@model IQueryable<Client>
@{
    ViewData["Title"] = "Lista de Clientes";
    int counter = (ViewBag.page - 1) * ViewBag.listSize;
}

    <h2>Lista de Clientes</h2>
@if (Model.Count() == 0)
{
    <p>Nenhum item encontrado.</p>
}
else
{
    <table>
        <tr>
            <th>#</th>
            <th>Nome</th>
            <th>Endere√ßo</th>
        </tr>
    @foreach (var c in Model)
    {
        <tr>
            <td>@(++counter)</td>
            <td>@c.Name</td>
            <td>@c.Address</td>
        </tr>
    }
    </table>
}
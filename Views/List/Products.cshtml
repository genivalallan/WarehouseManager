@model IQueryable<Product>
@{
    ViewData["Title"] = "Lista de Produtos";
    int counter = (ViewBag.page - 1) * ViewBag.listSize;
}

    <h2>Lista de Produtos</h2>
@if(Model.Count() == 0)
{
    <p>Nenhum item encontrado.</p>
}
else
{
    <table>
        <tr>
            <th>#</th>
            <th>Nome</th>
            <th>Descrição</th>
        </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@(++counter)</td>
            <td>@p.Name</td>
            <td>@p.Description</td>
        </tr>
    }
    </table>
}
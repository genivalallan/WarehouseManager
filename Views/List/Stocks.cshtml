@model IQueryable<Stock>
@{
    ViewData["Title"] = "Lista de Estoques";
    int counter = ((int)ViewData["page"] - 1) * (int)ViewData["listSize"];
}

    <h2>Lista de Estoques</h2>
@if (Model.Count() == 0)
{
    <p>Nenhum item encontrado.</p>
}
else
{
    <table>
        <tr>
            <th>Nº</th>
            <th>Produto</th>
            <th>Proprietário</th>
            <th>Saldo</th>
        </tr>
    @foreach (var s in Model)
    {
        <tr>
            <td>@(++counter)</td>
            <td>@s.Product.Name</td>
            <td>@s.Owner.Name</td>
            <td>@s.Balance</td>
        </tr>
    }
    </table>
}
@model IQueryable<Stock>
@{
    ViewData["Title"] = "Lista de Estoques";
    int counter = (ViewBag.page - 1) * ViewBag.listSize;
}

    <h2>Lista de Estoques</h2>
@if (Model.Count() == 0)
{
    <p>Nenhum item encontrado.</p>
}
else
{
    <table>
        <tr>
            <th>#</th>
            <th>Produto</th>
            <th>Propriet√°rio</th>
            <th>Saldo</th>
        </tr>
    @foreach (var s in Model)
    {
        <tr>
            <td>@(++counter)</td>
            <td>@(s?.Product.Name ?? "<Sem Dados>")</td>
            <td>@(s?.Owner.Name ?? "<Sem Dados>")</td>
            <td>@s.Balance</td>
        </tr>
    }
    </table>
}